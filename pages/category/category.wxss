.category {
  width: 100%;
}
.category .content {
  width: 100%;
  display: flex;
  position: fixed;
  height: 100%;
}
.category .content .category_left {
  width: 30%;
  overflow: auto;
}
.category .content .category_left .category_left_item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.category .content .category_left .active {
  color: var(--Color);
  border-left: 4rpx solid var(--Color);
}
.category .content .category_right {
  width: 70%;
  padding-bottom: 120rpx;
}
.category .content .category_right .category_right_item .category_right_item_tit {
  text-align: center;
  margin-top: 40rpx;
  font-size: 30rpx;
  font-weight: 700;
}
.category .content .category_right .category_right_item .category_right_item_content {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  text-align: center;
}
.category .content .category_right .category_right_item .category_right_item_content .items {
  padding: 10rpx 20rpx;
  width: 33.3%;
}
.category .content .category_right .category_right_item .category_right_item_content .items .item_img {
  width: 100%;
}
